{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "Bare bones webpack project with a node express server",
  "main": "server/index.js",
  "scripts": {
    "dev-server": "nodemon server/index.js --watch server",
    "dev-web": "webpack-dev-server --config ./webpack-dev.config.js --hot --progress --colors --content-base build", 
    "dev": "nodemon server/index.js --watch server & webpack-dev-server --config ./webpack-dev.config.js --hot --progress --colors --content-base build",
    "build": "rm build/*; webpack --config ./webpack-prod.config.js --progress --colors",
    "start": "node server/index.js",
    "test": "karma start",
    "testing": "karma start --single-run=false"
  },
  "repository": "git@github.com:cgreening/webpack-starter.git",
  "author": "Chris Greening",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.5.0",
    "cors": "^2.7.1",
    "express": "^4.12.4"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-runtime": "^6.26.0",
    "css-loader": "^0.28.5",
    "expect": "^1.6.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.3.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.0",
    "node-libs-browser": "^2.0.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.3.7",
    "react": "^15.6.1",
    "react-favicon": "0.0.9",
    "react-hot-loader": "^1.2.7",
    "sass-loader": "^6.0.6",
    "sinon": "^3.2.1",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
